@model MakaleProje.DTO.KategoriDTO

@{
    ViewBag.Title = "Edit";
    List<SelectListItem> ustKategori = ViewBag.UstKategori;
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<main class="container" style="width:50%">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kategori</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KategoriID)
        @Html.HiddenFor(model => model.AktifMi)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.ModifiedBy)
        @Html.HiddenFor(model => model.ModifiedDate)

        <div class="form-group">
            @Html.Label("Kategori Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KategoriAd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KategoriAd, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayName("Üst Kategori")
            <div class="col-md-10">
                @Html.DropDownListFor(a => a.UstKategoriID, new SelectList(ustKategori.Select(a => a.Value)), "Seçiniz", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UstKategoriID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-warning" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Listeye Dön", "Index")
    </div>
</main>