</head>
<body>

    <div class="container">
        <!-- #region header -->
        <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 text-center">
                <a class="blog-header-logo text-dark" href="/Home/Index">Makaleler</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                @using (Html.BeginForm("Tag", "Home"))
                {
                    @Html.TextBox("search-text", "", new { @class = "form-control me-2" })
                    <input type="submit" value="Ara" class="btn btn-outline-primary me-2" />
                }
                @*Login olmuş kullanıcı varsa Çıkış Yap butonu ve Admin Yönetim sayfasına erişim butonu*@
                @if (Session["user"] != null)
                {
                    <a href="@Url.Action("Create", "Makale")" class="btn btn-primary" type="submit" id="search">Admin Paneli</a>
                    <a href="@Url.Action("LogOut", "Login")" class="btn btn-primary" type="submit" id="search">Çıkış Yap</a>
                }
                @*Login olmuş kullanıcı yoksa Giriş Yap butonu *@

                else
                {
                    <a href="@Url.Action("Index", "Login")" class="btn btn-primary" type="submit" id="search">Giriş Yap</a>
                }

            </div>
        </div>
        </header>

        <!-- #endregion -->
        <!-- #region dinamik menu -->

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* Üst kategoriler *@
                        @foreach (var item in new MakaleProje.DAL.KategoriDAL().AnaKategoriListele())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @item.KategoriAd
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @* Üst kategoriye bağlı alt kategoriler *@
                                    @foreach (var item2 in new MakaleProje.DAL.KategoriDAL().AltKategoriListele(item.KategoriID))
                                    {
                                        <li id="@item2.KategoriID">
                                            <a class="dropdown-item" href="@Url.Action("Kategori", "Home",new { kategori = item2.KategoriID })">
                                                @item2.KategoriAd
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- #endregion -->
    </div>

    <div>
        @RenderBody()
    </div>
    <footer class="blog-footer">
        <p>
            <a href="#">Yukarı Dön</a>
        </p>
    </footer>
</body>
</html>
